# ⚖️ Pasalku.ai Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# REQUIRED VARIABLES (Must be configured for the app to work)
# =============================================================================

# AI Services (BytePlus Ark, Groq)
ARK_API_KEY=your_ark_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Database Connections
DATABASE_URL=postgresql://user:password@host:5432/pasalku_ai # Neon PostgreSQL
MONGODB_URI=mongodb+srv://user:password@cluster/pasalku_ai # MongoDB

# Authentication (Clerk)
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Payments (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_PRICE_ID=price_xxx

# App Configuration
NEXT_PUBLIC_APP_URL=https://pasalku.ai
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# OPTIONAL VARIABLES (For monitoring, analytics, and additional services)
# =============================================================================

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn
CHECKLY_API_KEY=your_checkly_api_key

# Analytics & Feature Flags
STATSIG_SERVER_API_KEY=your_statsig_server_key
NEXT_PUBLIC_HYPERTUNE_TOKEN=your_hypertune_token

# Email Service
RESEND_API_KEY=your_resend_api_key

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Additional Database Options (Multi-Database Architecture)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
TURSO_DATABASE_URL=your_turso_database_url
TURSO_AUTH_TOKEN=your_turso_auth_token
EDGEDB_DSN=your_edgedb_dsn

# SEO and Meta Tags
NEXT_PUBLIC_SITE_NAME=Pasalku.ai
NEXT_PUBLIC_SITE_DESCRIPTION="Platform AI Hukum Terlengkap di Indonesia - Konsultasi hukum berbasis AI dengan akurasi tinggi"

# Development
NODE_ENV=development

# Deployment (Vercel)
VERCEL_URL=
VERCEL_PROJECT_ID=