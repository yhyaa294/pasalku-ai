# ==============================================
# Application Settings
# ==============================================
ENVIRONMENT=development
DEBUG=false
NEXT_PUBLIC_APP_URL=http://localhost:5000

# ==============================================
# AI Services Configuration
# ==============================================
# BytePlus Ark (Primary AI)
ARK_API_KEY=your_ark_api_key_here
ARK_BASE_URL=https://ark.ap-southeast.bytepluses.com/api/v3
ARK_MODEL_ID=ep-20250830093230-swczp
ARK_REGION=ap-southeast

# Groq AI (Fallback)
GROQ_API_KEY=your_groq_api_key_here

# ==============================================
# Database Configuration
# ==============================================
# Neon PostgreSQL (Primary) - Use SQLite for local dev
DATABASE_URL=sqlite:///sql_app.db
# For production, use Neon PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/database

# MongoDB (Conversation Archive)
MONGODB_URI=mongodb://localhost:27017
MONGO_DB_NAME=pasalku_ai_conversation_archive

# Supabase (Optional - Realtime & Edge)
SUPABASE_URL=
SUPABASE_ANON_KEY=
