  name: string;
  role: string;
  isAuthenticated: boolean;
}

interface RecentActivity {
  type: 'draft' | 'consultation' | 'document' | 'research';
  title: string;
  time: string;
  description: string;
  status: 'success' | 'warning' | 'error' | 'info';
  icon: string;
  metrics: string;
